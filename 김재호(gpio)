#include "stm32f767xx.h"
#include "OK-STM767.h"

  
  
  int main(void)
{


  Initialize_MCU();				// initialize MCU and kit
  Delay_ms(50);					// wait for system stabilization
  Initialize_LCD();				// initialize text LCD module
  
   LCD_string(0x80," C project1");
   LCD_string(0xC0," GPIO");
  while(1)
    
    { RCC->AHB1ENR |=0x00000004;          //portC clock enable(GPIOCEN=1) 
      GPIOC->MODER &= 0xFFF31FF;     //8번 포트(MC02,3),4번포트(LED,C) input mode 설정 // led output 설정
      GPIOC->ODR &=0xFFFFFFEF;          //PC4(LED)=0
   //   GPIOC->BSRR=0x00000100;              //8번 포트 신호가 들어 오는 곳 on 
    //  GPIOC->ODR ^= 0x00000100;

     if (GPIOC->ODR & 0x00000100)       // if( portC에 전기적 신호가 들어온다면 )
        { LED_ON  // LED on함수 
           Delay_ms(1000);
           Beep();
        }
     else
          {GPIOC->BSRR = 0x00100000;		// LED off
	  }

      					// beep
    }
}




